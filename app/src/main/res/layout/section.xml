<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
                android:layout_height="@dimen/section_size"
                android:background="#C6DFF3"
                android:clickable="true"
                android:id="@+id/sections_id"
                xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:layout_width="50dp"
               android:src="@drawable/module_icon"
               android:layout_centerVertical="true"
               android:layout_marginLeft="10dp"
               android:id="@+id/section_image"
               android:layout_height="50dp"/>

    <TextView android:layout_width="match_parent"
              android:text="@string/module_title"
              android:layout_toRightOf="@id/section_image"
              android:layout_centerVertical="true"
              android:textSize="@dimen/modules_title"
              android:layout_marginLeft="10dp"
              android:textStyle="bold"
              android:textColor="#003b62"
              android:id="@+id/section_title"
              android:layout_height="25dp"/>
</RelativeLayout>