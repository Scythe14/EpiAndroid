<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:id="@+id/grade_view"
                android:background="#EEE"
                android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="50dp"
                    android:background="@drawable/black_border"
                    android:id="@+id/grade_layout"
                    android:layout_height="85dp">
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/attributed_grade"
                  android:text="A"
                  android:layout_centerHorizontal="true"
                  android:layout_centerVertical="true"
                  android:textSize="25dp"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView android:layout_width="wrap_content"
              android:id="@+id/grade_module_name"
              android:text="Module: "
              android:layout_marginLeft="5dp"
              android:singleLine="true"
              android:layout_toRightOf="@id/grade_layout"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:id="@+id/grade_credits"
              android:text="Credits: "
              android:layout_below="@id/grade_module_name"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="5dp"
              android:layout_toRightOf="@id/grade_layout"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:id="@+id/grade_cycle"
              android:text="Cycle: "
              android:layout_below="@id/grade_credits"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="5dp"
              android:layout_toRightOf="@id/grade_layout"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:id="@+id/grade_semester"
              android:text="Semester: "
              android:layout_below="@id/grade_cycle"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="5dp"
              android:layout_toRightOf="@id/grade_layout"
              android:layout_height="wrap_content"/>
</RelativeLayout>