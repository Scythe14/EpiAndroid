<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:id="@+id/message_item"
              android:orientation="horizontal"
              android:layout_height="wrap_content">
    <ImageView android:layout_width="60dp"
               android:src="@drawable/unknow_user"
               android:id="@+id/message_item_picture"
               android:layout_height="80dp"/>

    <LinearLayout android:layout_width="match_parent"
                  android:background="@drawable/black_border"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="5dp"
                  android:orientation="vertical"
                  android:id="@+id/message_item_text_layout"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/message_item_text_title"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_marginTop="5dp"
                  android:id="@+id/message_item_text_desc"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_marginTop="5dp"
                  android:id="@+id/message_item_text_date"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>