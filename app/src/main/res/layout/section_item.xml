<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:id="@+id/section_item_id"
                android:background="#EDF7FF"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content">
    <TextView android:layout_width="0dp"
              android:visibility="gone"
              android:id="@+id/section_item_stock_id"
              android:layout_height="0dp"/>
    <TextView android:layout_width="wrap_content"
              android:paddingTop="10dp"
              android:text="F0 - Projets Hub"
              android:layout_marginLeft="10dp"
              android:textSize="18sp"
              android:textColor="#003b62"
              android:textStyle="bold"
              android:singleLine="false"
              android:id="@+id/item_name_id"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:id="@+id/section_item_mark"
              android:visibility="gone"
              android:textColor="#000000"
              android:text="@string/note"
              android:layout_below="@id/item_name_id"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="10dp"
              android:textSize="14sp"
              android:layout_height="wrap_content"/>

    <View android:layout_width="250dp"
          android:layout_centerHorizontal="true"
          android:layout_below="@id/item_name_id"
          android:layout_marginTop="15dp"
          android:background="@drawable/timeline_border"
          android:id="@+id/timeline"
          android:layout_height="10dp">
    </View>

    <View android:layout_width="50dp"
          android:layout_centerHorizontal="true"
          android:layout_below="@id/item_name_id"
          android:layout_alignLeft="@+id/timeline"
          android:layout_marginTop="15dp"
          android:background="@drawable/timeline_passed_border"
          android:id="@+id/timeline_passed"
          android:layout_height="10dp">
    </View>

    <TextView android:layout_width="wrap_content"
              android:layout_centerVertical="true"
              android:layout_toRightOf="@+id/timeline"
              android:layout_below="@id/item_name_id"
              android:layout_marginTop="14dp"
              android:layout_marginLeft="5dp"
              android:textSize="10sp"
              android:singleLine="false"
              android:text="27/07/2016"
              android:id="@+id/deadline"
              android:textColor="#000000"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:layout_centerVertical="true"
              android:layout_toLeftOf="@+id/timeline"
              android:layout_below="@id/item_name_id"
              android:layout_marginTop="14dp"
              android:layout_marginRight="5dp"
              android:textSize="10sp"
              android:singleLine="false"
              android:text="31/08/2015"
              android:textColor="#000000"
              android:id="@+id/startline"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:text="Status: Stage en cours. (Non mandatory)"
              android:textSize="12sp"
              android:layout_below="@+id/startline"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="6dp"
              android:visibility="gone"
              android:id="@+id/section_info"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:layout_below="@id/section_info"
              android:layout_marginTop="10dp"
              android:text="Enregistrement jusqu'au 31/05/2016, 00:00"
              android:layout_marginLeft="10dp"
              android:textSize="13sp"
              android:singleLine="true"
              android:textColor="#2d75aa"
              android:textStyle="bold"
              android:visibility="gone"
              android:id="@+id/registration_date"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:layout_below="@id/deadline"
              android:layout_alignRight="@id/deadline"
              android:text="@string/registration"
              android:layout_marginTop="10dp"
              android:clickable="true"
              android:onClick="onClick"
              android:textSize="13sp"
              android:singleLine="true"
              android:visibility="gone"
              android:textColor="#2d75aa"
              android:textStyle="bold|italic"
              android:id="@+id/registration"
              android:layout_height="wrap_content"/>
</RelativeLayout>