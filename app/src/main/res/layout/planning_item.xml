<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"
                  android:background="#003b62"
                  android:id="@+id/planning_item_date"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/planning_item_date_start"
                  android:layout_marginLeft="5dp"
                  android:textColor="#F0F0F0"
                  android:textStyle="bold"
                  android:text="00:00:00"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/planning_item_date_end"
                  android:textColor="#F0F0F0"
                  android:textStyle="bold"
                  android:text=" - "
                  android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:background="#005bff"
                  android:id="@+id/planning_item_body"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/planning_item_body_title"
                  android:textColor="#F0F0F0"
                  android:layout_marginLeft="5dp"
                  android:layout_marginTop="5dp"
                  android:text="Title: "
                  android:singleLine="true"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/planning_item_body_desc"
                  android:textColor="#F0F0F0"
                  android:layout_marginLeft="5dp"
                  android:layout_marginTop="10dp"
                  android:text="Module: "
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/planning_item_body_slot"
                  android:textColor="#F0F0F0"
                  android:layout_marginLeft="5dp"
                  android:layout_marginBottom="5dp"
                  android:layout_marginTop="10dp"
                  android:text="Type: "
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/planning_item_module_registered"
                  android:textColor="#F0F0F0"
                  android:text="@string/registered_module"
                  android:textStyle="bold|italic"
                  android:layout_marginLeft="5dp"
                  android:layout_marginBottom="5dp"
                  android:layout_marginTop="10dp"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/planning_item_is_registered"
                  android:textColor="#00FF00"
                  android:textStyle="bold|italic"
                  android:layout_marginLeft="5dp"
                  android:layout_marginBottom="5dp"
                  android:layout_marginTop="10dp"
                  android:text="@string/unregister"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>